@model CMCS.Models.Claim
@{
    ViewData["Title"] = "Claim Details - #" + Model.Id;
}

<div class="container main-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-invoice me-2"></i>Claim Details - #@Model.Id</h2>
        <a href="/Claim" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Claims
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Claim Information Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-info-circle me-2"></i>Claim Information</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <strong class="text-purple">Lecturer Name:</strong><br>
                                <span class="fs-5">@Model.LecturerName</span>
                            </div>
                            <div class="mb-3">
                                <strong class="text-purple">Month:</strong><br>
                                <span class="fs-5">@Model.Month</span>
                            </div>
                            <div class="mb-3">
                                <strong class="text-purple">Hours Worked:</strong><br>
                                <span class="fs-5">@Model.HoursWorked hours</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <strong class="text-purple">Hourly Rate:</strong><br>
                                <span class="fs-5">$@Model.HourlyRate</span>
                            </div>
                            <div class="mb-3">
                                <strong class="text-purple">Total Amount:</strong><br>
                                <span class="fs-5 text-success">$@Model.TotalAmount</span>
                            </div>
                            <div class="mb-3">
                                <strong class="text-purple">Submitted Date:</strong><br>
                                <span class="fs-5">@Model.SubmittedDate.ToString("MMM dd, yyyy HH:mm")</span>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mt-4">
                            <strong class="text-purple">Notes:</strong>
                            <div class="p-3 rounded mt-2" style="background: var(--primary-purple-bg);">
                                @Model.Notes
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Status Timeline -->
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-road me-2"></i>Status Timeline</h4>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item @(Model.Status != "Pending" ? "completed" : "active")">
                            <div class="timeline-point"></div>
                            <div class="timeline-content">
                                <h5>Claim Submitted</h5>
                                <p class="text-muted">@Model.SubmittedDate.ToString("MMM dd, yyyy HH:mm")</p>
                                <span class="badge badge-success">Completed</span>
                            </div>
                        </div>

                        <div class="timeline-item @(Model.Status == "Pending" ? "active" : Model.Status != "Pending" ? "completed" : "")">
                            <div class="timeline-point"></div>
                            <div class="timeline-content">
                                <h5>Under Review</h5>
                                <p class="text-muted">Being reviewed by coordinator</p>
                                @if (Model.Status == "Pending")
                                {
                                    <span class="badge badge-warning">In Progress</span>
                                }
                                else
                                {
                                    <span class="badge badge-success">Completed</span>
                                }
                            </div>
                        </div>

                        <div class="timeline-item @(Model.Status != "Pending" ? "completed" : "")">
                            <div class="timeline-point"></div>
                            <div class="timeline-content">
                                <h5>@(Model.Status == "Approved" ? "Approved" : Model.Status == "Rejected" ? "Rejected" : "Processing")</h5>
                                @if (Model.ProcessedDate.HasValue)
                                {
                                    <p class="text-muted">@Model.ProcessedDate.Value.ToString("MMM dd, yyyy HH:mm") by @Model.ProcessedBy</p>
                                }
                                else
                                {
                                    <p class="text-muted">Awaiting decision</p>
                                }
                                <span class="badge badge-@(Model.Status == "Approved" ? "success" : Model.Status == "Rejected" ? "danger" : "warning")">@Model.Status</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Status Overview -->
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Status Overview</h4>
                </div>
                <div class="card-body text-center">
                    <div class="status-indicator status-@Model.Status.ToLower() mb-3">
                        <i class="fas fa-@(Model.Status == "Approved" ? "check-circle" : Model.Status == "Rejected" ? "times-circle" : "clock") fa-3x"></i>
                    </div>
                    <h3 class="text-@(Model.Status == "Approved" ? "success" : Model.Status == "Rejected" ? "danger" : "warning")">@Model.Status</h3>
                    <p class="text-muted">Current Claim Status</p>
                </div>
            </div>

            <!-- Documents -->
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-paperclip me-2"></i>Documents</h4>
                </div>
                <div class="card-body">
                    @if (Model.DocumentNames != null && Model.DocumentNames.Any())
                    {
                        foreach (var doc in Model.DocumentNames)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2 p-2 rounded" style="background: var(--primary-purple-bg);">
                                <span><i class="fas fa-file me-2"></i>@doc</span>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center">No documents attached</p>
                    }
                </div>
            </div>

            <!-- Actions -->
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h4>
                </div>
                <div class="card-body">
                    @if (Model.Status == "Pending")
                    {
                        <a href="/Claim/Approve/@Model.Id" class="btn btn-success btn-block mb-2"
                           onclick="return confirm('Are you sure you want to approve claim #@Model.Id?')">
                            <i class="fas fa-check me-2"></i>Approve Claim
                        </a>
                        <a href="/Claim/Reject/@Model.Id" class="btn btn-danger btn-block"
                           onclick="return confirm('Are you sure you want to reject claim #@Model.Id?')">
                            <i class="fas fa-times me-2"></i>Reject Claim
                        </a>
                    }
                    <a href="/Claim/Submit" class="btn btn-primary btn-block mt-2">
                        <i class="fas fa-plus me-2"></i>Submit New Claim
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh status every 5 seconds
        setInterval(function() {
            fetch('/Claim/GetClaimStatus?id=@Model.Id')
                .then(response => response.json())
                .then(data => {
                    // Update status display if changed
                    if (data.status !== '@Model.Status') {
                        location.reload(); // Reload to show updated information
                    }
                });
        }, 5000);
    </script>
}