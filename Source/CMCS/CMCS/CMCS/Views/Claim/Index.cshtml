@model List<CMCS.Models.Claim>
@{
    ViewData["Title"] = "All Claims";
}

<h2>All Claims</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Lecturer</th>
            <th>Month</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Total</th>
            <th>Status</th>
            <th>Documents</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Id</td>
                <td>@claim.LecturerName</td>
                <td>@claim.Month</td>
                <td>@claim.HoursWorked</td>
                <td>$@claim.HourlyRate</td>
                <td>$@claim.TotalAmount</td>
                <td>
                    <span class="badge badge-@(claim.Status == "Approved" ? "success" : claim.Status == "Rejected" ? "danger" : "warning")">
                        @claim.Status
                    </span>
                </td>
                <td>
                    @if (claim.DocumentNames != null && claim.DocumentNames.Any())
                    {
                        @foreach (var doc in claim.DocumentNames)
                        {
                            <span class="badge badge-secondary">@doc</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">No documents</span>
                    }
                </td>
                <td>
                    @if (claim.Status == "Pending")
                    {
                        <a href="/Claim/Approve/@claim.Id" class="btn btn-success btn-sm">Approve</a>
                        <a href="/Claim/Reject/@claim.Id" class="btn btn-danger btn-sm">Reject</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Claim/Submit" class="btn btn-primary">Submit New Claim</a>