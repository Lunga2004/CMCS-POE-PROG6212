@model List<CMCS.Models.Claim>
@{
    ViewData["Title"] = "View Claims - Status Tracking";
}

<div class="container main-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-list-check me-2"></i>Claim Status Tracking</h2>
        <a href="/Claim/Submit" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Submit New Claim
        </a>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stats-card">
                <h4>@Model.Count</h4>
                <p>Total Claims</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <h4>@Model.Count(c => c.Status == "Pending")</h4>
                <p>Pending</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <h4>@Model.Count(c => c.Status == "Approved")</h4>
                <p>Approved</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <h4>@Model.Count(c => c.Status == "Rejected")</h4>
                <p>Rejected</p>
            </div>
        </div>
    </div>

    <!-- Claims Table -->
    <div class="card">
        <div class="card-header">
            <h4 class="mb-0"><i class="fas fa-table me-2"></i>All Claims</h4>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Lecturer</th>
                                <th>Month</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Progress</th>
                                <th>Submitted</th>
                                <th>Processed</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td><strong>#@claim.Id</strong></td>
                                    <td>@claim.LecturerName</td>
                                    <td>@claim.Month</td>
                                    <td><strong class="text-success">$@claim.TotalAmount</strong></td>
                                    <td>
                                        <span class="badge badge-@(claim.Status == "Approved" ? "success" : claim.Status == "Rejected" ? "danger" : "warning")">
                                            @claim.Status
                                        </span>
                                    </td>
                                    <td style="width: 150px;">
                                        <div class="progress" style="height: 8px;">
                                            @if (claim.Status == "Pending")
                                            {
                                                <div class="progress-bar bg-warning" role="progressbar" style="width: 33%"
                                                     title="Submitted - Under Review"></div>
                                            }
                                            else if (claim.Status == "Approved")
                                            {
                                                <div class="progress-bar bg-success" role="progressbar" style="width: 100%"
                                                     title="Approved - Completed"></div>
                                            }
                                            else if (claim.Status == "Rejected")
                                            {
                                                <div class="progress-bar bg-danger" role="progressbar" style="width: 100%"
                                                     title="Rejected - Completed"></div>
                                            }
                                        </div>
                                        <small class="text-muted">
                                            @if (claim.Status == "Pending")
                                            {
                                                <text>Under Review</text>
                                            }
                                            else if (claim.Status == "Approved")
                                            {
                                                <text>Completed</text>
                                            }
                                            else if (claim.Status == "Rejected")
                                            {
                                                <text>Completed</text>
                                            }
                                        </small>
                                    </td>
                                    <td>
                                        <small>@claim.SubmittedDate.ToString("MMM dd, yyyy")</small><br>
                                        <small class="text-muted">@claim.SubmittedDate.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        @if (claim.ProcessedDate.HasValue)
                                        {
                                            <small>@claim.ProcessedDate.Value.ToString("MMM dd, yyyy")</small>

                                            <br>
                                            <small class="text-muted">@claim.ProcessedDate.Value.ToString("HH:mm")</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="/Claim/Details/@claim.Id" class="btn btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (claim.Status == "Pending")
                                            {
                                                <a href="/Claim/Approve/@claim.Id" class="btn btn-success" title="Approve Claim"
                                                   onclick="return confirm('Are you sure you want to approve claim #@claim.Id?')">
                                                    <i class="fas fa-check"></i>
                                                </a>
                                                <a href="/Claim/Reject/@claim.Id" class="btn btn-danger" title="Reject Claim"
                                                   onclick="return confirm('Are you sure you want to reject claim #@claim.Id?')">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No Claims Found</h4>
                    <p class="text-muted">There are no claims submitted yet.</p>
                    <a href="/Claim/Submit" class="btn btn-primary mt-3">
                        <i class="fas fa-plus-circle me-2"></i>Submit Your First Claim
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-paper-plane fa-2x text-primary mb-3"></i>
                    <h5>Submit New Claim</h5>
                    <p class="text-muted">Create a new monthly claim submission</p>
                    <a href="/Claim/Submit" class="btn btn-outline-primary">Get Started</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-sync-alt fa-2x text-warning mb-3"></i>
                    <h5>Auto-Refresh</h5>
                    <p class="text-muted">Page refreshes every 10 seconds for real-time updates</p>
                    <small class="text-muted" id="refreshTimer">Next refresh in 10 seconds</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh status every 10 seconds
        let refreshTime = 10;

        function updateTimer() {
            refreshTime--;
            document.getElementById('refreshTimer').textContent = `Next refresh in ${refreshTime} seconds`;

            if (refreshTime <= 0) {
                location.reload();
                refreshTime = 10;
            }
        }

        setInterval(updateTimer, 1000);
    </script>
}