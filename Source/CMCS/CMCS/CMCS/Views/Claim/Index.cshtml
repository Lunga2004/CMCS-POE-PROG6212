@model List<CMCS.Models.Claim>
@{
    ViewData["Title"] = "All Claims - Status Tracking";
}

<h2>Claim Status Tracking</h2>

<div class="row">
    <div class="col-md-12 mb-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">System Overview</h5>
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <h4>@Model.Count</h4>
                                <p>Total Claims</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body">
                                <h4>@Model.Count(c => c.Status == "Pending")</h4>
                                <p>Pending</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <h4>@Model.Count(c => c.Status == "Approved")</h4>
                                <p>Approved</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-danger text-white">
                            <div class="card-body">
                                <h4>@Model.Count(c => c.Status == "Rejected")</h4>
                                <p>Rejected</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>Lecturer</th>
            <th>Month</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Progress</th>
            <th>Submitted</th>
            <th>Processed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Id</td>
                <td>@claim.LecturerName</td>
                <td>@claim.Month</td>
                <td><strong>$@claim.TotalAmount</strong></td>
                <td>
                    <span class="badge badge-@(claim.Status == "Approved" ? "success" : claim.Status == "Rejected" ? "danger" : "warning") badge-pill">
                        @claim.Status
                    </span>
                </td>
                <td style="width: 200px;">
                    <div class="progress" style="height: 20px;">
                        @if (claim.Status == "Pending")
                        {
                            <div class="progress-bar bg-warning" role="progressbar" style="width: 33%" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100">
                                Submitted
                            </div>
                        }
                        else if (claim.Status == "Approved")
                        {
                            <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                                Approved
                            </div>
                        }
                        else if (claim.Status == "Rejected")
                        {
                            <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                                Rejected
                            </div>
                        }
                    </div>
                </td>
                <td>
                    <small>@claim.SubmittedDate.ToString("MMM dd, yyyy")</small><br>
                    <small class="text-muted">@claim.SubmittedDate.ToString("HH:mm")</small>
                </td>
                <td>
                    @if (claim.ProcessedDate.HasValue)
                    {
                        <small>@claim.ProcessedDate.Value.ToString("MMM dd, yyyy")</small>

                        <br>
                        <small class="text-muted">@claim.ProcessedDate.Value.ToString("HH:mm") by @claim.ProcessedBy</small>
                    }
                    else
                    {
                        <span class="text-muted">-</span>
                    }
                </td>
                <td>
                    <div class="btn-group">
                        <a href="/Claim/Details/@claim.Id" class="btn btn-info btn-sm">Details</a>
                        @if (claim.Status == "Pending")
                        {
                            <a href="/Claim/Approve/@claim.Id" class="btn btn-success btn-sm" onclick="return confirm('Approve this claim?')">Approve</a>
                            <a href="/Claim/Reject/@claim.Id" class="btn btn-danger btn-sm" onclick="return confirm('Reject this claim?')">Reject</a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Claim/Submit" class="btn btn-primary">Submit New Claim</a>

@section Scripts {
    <script>
        // Auto-refresh status every 10 seconds
        setInterval(function() {
            location.reload();
        }, 10000);

        // Real-time status updates
        function updateClaimStatus(claimId) {
            fetch('/Claim/GetClaimStatus?id=' + claimId)
                .then(response => response.json())
                .then(data => {
                    // Update the status badge
                    const statusBadge = document.querySelector(`tr:has(td:first-child:contains("${claimId}")) .badge`);
                    if (statusBadge) {
                        statusBadge.textContent = data.status;
                        statusBadge.className = `badge badge-${data.status === 'Approved' ? 'success' : data.status === 'Rejected' ? 'danger' : 'warning'} badge-pill`;
                    }

                    // Update progress bar
                    const progressBar = document.querySelector(`tr:has(td:first-child:contains("${claimId}")) .progress-bar`);
                    if (progressBar) {
                        if (data.status === 'Pending') {
                            progressBar.style.width = '33%';
                            progressBar.textContent = 'Submitted';
                            progressBar.className = 'progress-bar bg-warning';
                        } else if (data.status === 'Approved') {
                            progressBar.style.width = '100%';
                            progressBar.textContent = 'Approved';
                            progressBar.className = 'progress-bar bg-success';
                        } else if (data.status === 'Rejected') {
                            progressBar.style.width = '100%';
                            progressBar.textContent = 'Rejected';
                            progressBar.className = 'progress-bar bg-danger';
                        }
                    }
                });
        }
    </script>
}