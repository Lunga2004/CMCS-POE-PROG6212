@{
    ViewData["Title"] = "Contract Monthly Claim System";
}

<div class="hero-section">
    <div class="container">
        <h1>Contract Monthly Claim System</h1>
        <p class="lead">Streamline monthly claims for independent contractor lecturers with our modern, efficient platform</p>
        <div class="mt-4">
            <a href="/Claim/Submit" class="btn btn-light btn-lg me-3">
                <i class="fas fa-plus-circle me-2"></i>Submit New Claim
            </a>
            <a href="/Claim/Index" class="btn btn-outline-light btn-lg">
                <i class="fas fa-list me-2"></i>View All Claims
            </a>
        </div>
    </div>
</div>

<div class="container main-content">
    <div class="feature-grid">
        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-paper-plane"></i>
            </div>
            <h4>Quick Submission</h4>
            <p>Submit monthly claims with just a few clicks. Easy form with automatic calculations.</p>
        </div>

        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h4>Real-time Tracking</h4>
            <p>Track your claim status in real-time with beautiful progress indicators and timelines.</p>
        </div>

        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-file-upload"></i>
            </div>
            <h4>Document Upload</h4>
            <p>Upload supporting documents securely. Multiple file types supported with size limits.</p>
        </div>

        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-bolt"></i>
            </div>
            <h4>Fast Approval</h4>
            <p>Streamlined approval process for coordinators and managers with instant updates.</p>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-8 mx-auto text-center">
            <h2 class="mb-4">How It Works</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="stats-card">
                        <div class="feature-icon">
                            <i class="fas fa-1"></i>
                        </div>
                        <h5>Submit Claim</h5>
                        <p class="text-muted">Fill out the simple form with hours and rates</p>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="stats-card">
                        <div class="feature-icon">
                            <i class="fas fa-2"></i>
                        </div>
                        <h5>Review Process</h5>
                        <p class="text-muted">Coordinator reviews and approves the claim</p>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="stats-card">
                        <div class="feature-icon">
                            <i class="fas fa-3"></i>
                        </div>
                        <h5>Get Paid</h5>
                        <p class="text-muted">Approved claims are processed for payment</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>