@model List<CMCS.Models.Claim>
@{
    ViewData["Title"] = "All Claims - Status Tracking";
}

<div class="container main-content">
    <div class="row">
        <div class="col-md-12 mb-4">
            <h1><i class="fas fa-list-check me-2"></i>Claim Status Tracking</h1>
            <p class="text-muted">Monitor and manage all monthly claims in one place</p>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="stats-card">
                <h4>@Model.Count</h4>
                <p>Total Claims</p>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="stats-card">
                <h4>@Model.Count(c => c.Status == "Pending")</h4>
                <p>Pending</p>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="stats-card">
                <h4>@Model.Count(c => c.Status == "Approved")</h4>
                <p>Approved</p>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="stats-card">
                <h4>@Model.Count(c => c.Status == "Rejected")</h4>
                <p>Rejected</p>
            </div>
        </div>
    </div>

    <!-- Claims Table -->
    <div class="card">
        <div class="card-header">
            <h4 class="mb-0"><i class="fas fa-table me-2"></i>All Claims</h4>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Lecturer</th>
                                <th>Month</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Progress</th>
                                <th>Submitted</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td><strong>#@claim.Id</strong></td>
                                    <td>@claim.LecturerName</td>
                                    <td>@claim.Month</td>
                                    <td>@claim.HoursWorked</td>
                                    <td>$@claim.HourlyRate</td>
                                    <td><strong>$@claim.TotalAmount</strong></td>
                                    <td>
                                        <span class="badge badge-@(claim.Status == "Approved" ? "success" : claim.Status == "Rejected" ? "danger" : "warning") badge-pill">
                                            @claim.Status
                                        </span>
                                    </td>
                                    <td style="width: 200px;">
                                        <div class="progress" style="height: 20px;">
                                            @if (claim.Status == "Pending")
                                            {
                                                <div class="progress-bar bg-warning" role="progressbar" style="width: 33%" aria-valuenow="33" aria-valuemin="0" aria-valuemax="100">
                                                    Submitted
                                                </div>
                                            }
                                            else if (claim.Status == "Approved")
                                            {
                                                <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                                                    Approved
                                                </div>
                                            }
                                            else if (claim.Status == "Rejected")
                                            {
                                                <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                                                    Rejected
                                                </div>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <small>@claim.SubmittedDate.ToString("MMM dd, yyyy")</small><br>
                                        <small class="text-muted">@claim.SubmittedDate.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            @if (claim.Status == "Pending")
                                            {
                                                <a href="/Claim/Approve/@claim.Id" class="btn btn-success btn-sm" onclick="return confirm('Approve this claim?')">
                                                    <i class="fas fa-check"></i> Approve
                                                </a>
                                                <a href="/Claim/Reject/@claim.Id" class="btn btn-danger btn-sm" onclick="return confirm('Reject this claim?')">
                                                    <i class="fas fa-times"></i> Reject
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Processed</span>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No Claims Found</h4>
                    <p class="text-muted">There are no claims submitted yet.</p>
                    <a href="/Claim/Submit" class="btn btn-primary mt-3">
                        <i class="fas fa-plus-circle me-2"></i>Submit Your First Claim
                    </a>
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        <a href="/Claim/Submit" class="btn btn-primary">
            <i class="fas fa-plus-circle me-2"></i>Submit New Claim
        </a>
        <a href="/" class="btn btn-secondary">
            <i class="fas fa-home me-2"></i>Back to Home
        </a>
    </div>
</div>