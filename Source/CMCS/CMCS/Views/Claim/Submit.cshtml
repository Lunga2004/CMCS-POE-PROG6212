@model CMCS.Models.Claim
@{
    ViewData["Title"] = "Submit New Claim";
}

<div class="container main-content">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Submit Monthly Claim</h3>
                </div>
                <div class="card-body p-4">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>@ViewBag.Error
                        </div>
                    }

                    <form method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Lecturer Name *</label>
                                    <input type="text" class="form-control" name="LecturerName" value="@(Model?.LecturerName ?? "")" required placeholder="Enter your full name">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Month *</label>
                                    <input type="month" class="form-control" name="Month" value="@(Model?.Month ?? "")" required>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Hours Worked *</label>
                                    <input type="number" step="0.1" class="form-control" name="HoursWorked" value="@(Model?.HoursWorked.ToString() ?? "")" required placeholder="e.g., 40.5" min="0.1">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Hourly Rate ($) *</label>
                                    <input type="number" step="0.01" class="form-control" name="HourlyRate" value="@(Model?.HourlyRate.ToString() ?? "")" required placeholder="e.g., 50.00" min="0.01">
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Notes (Optional)</label>
                            <textarea class="form-control" name="Notes" rows="3" placeholder="Any additional information about this claim...">@(Model?.Notes ?? "")</textarea>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Total Amount:</strong> $<span id="totalAmount">0.00</span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a href="/Claim" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left me-2"></i>Back to Claims
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-2"></i>Submit Claim
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Calculate total amount in real-time
        function calculateTotal() {
            const hoursInput = document.querySelector('[name="HoursWorked"]');
            const rateInput = document.querySelector('[name="HourlyRate"]');

            const hours = parseFloat(hoursInput.value) || 0;
            const rate = parseFloat(rateInput.value) || 0;
            const total = hours * rate;

            document.getElementById('totalAmount').textContent = total.toFixed(2);
        }

        // Add event listeners
        document.querySelector('[name="HoursWorked"]').addEventListener('input', calculateTotal);
        document.querySelector('[name="HourlyRate"]').addEventListener('input', calculateTotal);

        // Calculate on page load
        calculateTotal();
    </script>
}