@{
    ViewData["Title"] = "Contract Monthly Claim System";
}

<div class="text-center">
    <h1 class="display-4">Contract Monthly Claim System</h1>
    <p class="lead">Streamline monthly claims for independent contractor lecturers</p>

    <div class="row mt-5">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Submit New Claim</h5>
                    <p class="card-text">Lecturers can submit monthly claims with hours worked and hourly rates.</p>
                    <a href="/Claim/Submit" class="btn btn-primary">Submit Claim</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">View & Manage Claims</h5>
                    <p class="card-text">Coordinators and managers can approve or reject pending claims.</p>
                    <a href="/Claim/Index" class="btn btn-success">View All Claims</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <h3>System Features</h3>
        <ul class="list-unstyled">
            <li>✓ Submit monthly claims with one click</li>
            <li>✓ Automatic total amount calculation</li>
            <li>✓ Track claim status (Pending, Approved, Rejected)</li>
            <li>✓ Easy approval process for managers</li>
        </ul>
    </div>
</div>