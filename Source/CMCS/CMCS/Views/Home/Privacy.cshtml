@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container main-content">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0"><i class="fas fa-shield-alt me-2"></i>Privacy Policy</h3>
                </div>
                <div class="card-body p-4">
                    <h4>Data Protection</h4>
                    <p>Your data is securely stored and only accessible to authorized personnel. We maintain strict confidentiality standards for all claim information.</p>

                    <h4 class="mt-4">Information Collection</h4>
                    <p>We collect only the necessary information required to process your monthly claims, including hours worked, rates, and supporting documentation.</p>

                    <h4 class="mt-4">Data Usage</h4>
                    <p>Your information is used solely for the purpose of claim processing, approval workflows, and payment calculations.</p>

                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>